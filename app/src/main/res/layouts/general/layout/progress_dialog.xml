<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="horizontal"
    android:paddingTop="@dimen/progress_dialog_padding_top_bottom"
    android:paddingBottom="@dimen/progress_dialog_padding_top_bottom"
    android:paddingStart="@dimen/progress_dialog_padding_start_end"
    android:paddingEnd="@dimen/progress_dialog_padding_start_end">

    <ProgressBar
        android:layout_width="@dimen/progress_dialog_bar_size"
        android:layout_height="@dimen/progress_dialog_bar_size"
        android:theme="@style/AppTheme.PrimaryAccent"
        android:indeterminate="true" />

    <com.sigma.beaconcontrol.views.widgets.CustomTextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/progress_dialog_text"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="test"
        app:fontPath="Raleway-SemiBold.ttf" />

</LinearLayout>