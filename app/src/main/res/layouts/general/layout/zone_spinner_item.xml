<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/zone_color_view"
        android:layout_width="@dimen/main_zone_color_width"
        android:layout_height="match_parent" />

    <com.sigma.beaconcontrol.views.widgets.CustomTextView
        android:id="@+id/zone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spinner_vertical_padding"
        android:paddingEnd="@dimen/spinner_horizontal_padding"
        android:paddingStart="@dimen/spinner_horizontal_padding"
        android:paddingTop="@dimen/spinner_vertical_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/main_sub_text_size"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        app:fontPath="Raleway-SemiBold.ttf" />
</LinearLayout>