<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="@dimen/splashscreen_logo_size"
        android:layout_height="@dimen/splashscreen_logo_size"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:layout_centerInParent="true"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="@dimen/splashscreen_progress_margin"
        android:theme="@style/AppTheme.PrimaryAccent"
        android:layout_below="@+id/main_image"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>