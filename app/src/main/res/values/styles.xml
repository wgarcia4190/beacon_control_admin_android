<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="AppBarShortDark" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="MyMaterialTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyMaterialTheme.TransparentModal">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonDialogBackground">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:paddingTop">@dimen/initial_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DialogImageContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/initial_margin_1</item>
        <item name="android:layout_marginBottom">@dimen/initial_margin_3</item>
    </style>

    <style name="DialogImageContainerImage">
        <item name="android:layout_width">@dimen/image_dialog_width</item>
        <item name="android:layout_height">@dimen/image_dialog_height</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DialogImageContainerText">
        <item name="android:textSize">@dimen/initial_text_1</item>
        <item name="android:textColor">@color/black_56</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/initial_margin_1</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>

    <style name="CommonDialogTitle">
        <item name="android:textSize">@dimen/initial_text_3</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/initial_margin_2</item>
        <item name="android:layout_marginRight">@dimen/initial_margin_2</item>
        <item name="android:layout_marginBottom">@dimen/initial_margin_2</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>

    <style name="CommonDialogMessage">
        <item name="android:textSize">@dimen/initial_text_2</item>
        <item name="android:textColor">@color/black_56</item>
        <item name="android:textColorLink">@color/black_56</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/initial_margin_2</item>
        <item name="android:layout_marginRight">@dimen/initial_margin_2</item>
        <item name="android:layout_marginBottom">@dimen/initial_margin_3</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>

    <style name="CommonDialogButton">
        <item name="android:textSize">@dimen/initial_text_2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/initial_margin_4</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>
    <style name="CommonDialogButton.Negative" parent="@style/CommonDialogButton">
        <item name="android:textColor">@color/dark_red</item>
    </style>
    <style name="CommonDialogButton.Positive" parent="@style/CommonDialogButton">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="PrimaryButtonVerticalDivider">
        <item name="android:background">@color/white_16</item>
        <item name="android:layout_width">@dimen/divider_normal_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConsentWelcomeMessage">
        <item name="android:textSize">@dimen/initial_text_4</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>

    <style name="ConsentMessage">
        <item name="android:textSize">@dimen/initial_text_2</item>
        <item name="android:textColor">@color/black_56</item>
        <item name="fontPath">Raleway-Regular.ttf</item>
    </style>

</resources>
